{
  "name": "genfins",
  "version": "1.8.3",
  "description": "Sistema de Gestão de Finanças Pessoais - GenFins",
  "main": "dist/main/main.js",
  "author": "Kassiano Vieira",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KassianoV/GenFinds"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron dist/main/main.js",
    "dev": "SET NODE_ENV=development && npm run build && electron dist/main/main.js",
    "dev:linux": "NODE_ENV=development npm run build && electron dist/main/main.js",
    "build:dir": "npm run build && electron-builder --dir",
    "build:prod": "npm run build && electron-builder --win --x64",
    "build:all": "npm run build && electron-builder --win --mac --linux",
    "generate-icons": "node build-icon.js",
    "verify-build": "node verify-build.js",
    "test-icon": "node test-icon.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:security": "jest database.security.test.ts",
    "test:performance": "jest test/performance",
    "test:validation": "jest test/validation",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "test:coverage:all": "jest --coverage --verbose",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:single": "jest --testNamePattern",
    "test:file": "jest --testPathPattern",
    "lint": "eslint src test --ext .ts",
    "lint:fix": "eslint src test --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"test/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"test/**/*.{ts,js,json}\"",
    "clean": "rimraf dist coverage release",
    "clean:test": "rimraf temp-test",
    "verify:patrimonio": "node verify-patrimonio.js",
    "fix:patrimonio": "node corrigir-patrimonio.js",
    "prepare": "npm run build",
    "pretest": "npm run build"
  },
  "keywords": [
    "financas",
    "electron",
    "typescript",
    "gestao-financeira",
    "controle-financeiro",
    "orcamento-pessoal"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "playwright": "^1.40.1",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.5",
    "sharp": "^0.33.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "chart.js": "^4.4.0",
    "decimal.js": "^10.6.0",
    "sql.js": "^1.10.3",
    "winston": "^3.19.0",
    "zod": "^3.22.4"
  },
  "build": {
    "appId": "com.kassiano.genfins",
    "productName": "GenFins",
    "copyright": "Copyright © 2024 Kassiano Vieira",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "assets/**/*",
      "node_modules/sql.js/dist/sql-wasm.wasm",
      "package.json",
      "!**/*.ts",
      "!*.ts",
      "!node_modules/.cache"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "publisherName": "Kassiano Vieira",
      "signAndEditExecutable": false,
      "signingHashAlgorithms": [],
      "fileAssociations": [
        {
          "ext": "gfn",
          "name": "GenFins Database",
          "description": "Arquivo de dados do GenFins",
          "icon": "assets/icon.ico"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GenFins",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "language": "2070",
      "perMachine": false,
      "warningsAsErrors": false
    },
    "portable": {
      "artifactName": "GenFins-Portable-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/",
      "category": "Finance",
      "desktop": {
        "Name": "GenFins",
        "Comment": "Gerenciador Financeiro Pessoal",
        "Categories": "Finance;Office;",
        "StartupWMClass": "GenFins"
      }
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "compression": "maximum",
    "asar": true
  }
}
