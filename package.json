{
  "name": "genfins",
  "version": "1.2.0",
  "description": "Sistema de Gestão de Finanças Pessoais - GenFins",
  "main": "dist/main/main.js",
  "author": "Kassiano",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KassianoV/GenFinds"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron dist/main/main.js",
    "dev": "NODE_ENV=development npm run start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:security": "jest database.security.test.ts",
    "test:performance": "jest test/performance",
    "test:validation": "jest test/validation",
    "test:all": "jest --coverage --verbose",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:single": "jest --testNamePattern",
    "test:file": "jest --testPathPattern",
    "lint": "eslint src test --ext .ts",
    "lint:fix": "eslint src test --ext .ts --fix",
    "clean": "rimraf dist coverage",
    "clean:test": "rimraf temp-test",
    "prepare": "npm run build",
    "pretest": "npm run build"
  },
  "keywords": [
    "financas",
    "electron",
    "typescript",
    "gestao-financeira",
    "controle-financeiro",
    "orcamento-pessoal"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/sql.js": "^1.4.9",
    "concurrently": "^8.2.2",
    "conventional-changelog-cli": "^4.1.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "sql.js": "^1.10.3",
    "winston": "^3.19.0",
    "zod": "^4.2.1"
  },
  "build": {
    "appId": "com.kassiano.genfins",
    "productName": "GenFins",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "node_modules/sql.js/dist/sql-wasm.wasm",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "signAndEditExecutable": false,
      "signingHashAlgorithms": []
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GenFins",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    },
    "compression": "maximum",
    "asar": true
  }
}
